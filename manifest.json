{
    "manifest_version": 3,
    "name": "Advanced Color Picker",
    "description": "Pick colors from any page and convert between formats.",
    "version": "1.0",
    "permissions": ["activeTab", "clipboardWrite", "eyedropper"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon1.png"
    },
    "icons": {
      "16": "icon1.png",
      "48": "icon1.png",
      "128": "icon1.png"
    }
  }
  